<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- api package -->
    <logger name="com.beauty4u.backend" level="DEBUG" additivity="false">
        <appender-ref ref="api"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOGSTASH"/>
    </logger>

<!--    스프링 웹 로거 설정-->
    <logger name="org.springframework.web" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOGSTASH"/>
    </logger>

    <!--  API -->
    <appender name="api" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${API_LOG_PATH_NAME}</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <provider class="net.logstash.logback.composite.loggingevent.ArgumentsJsonProvider"/>
        </encoder>
    </appender>

    <!-- 콘솔 로깅 Logstash JSON 형식으로 변경 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}  %highlight([%thread]) %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
            <customFields>{"application":"beauty4u"}</customFields>
        </encoder>
    </appender>

    <!-- Logstash 전송 시 사용할 TCP 통신 정보 -->
    <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>localhost:5000</destination>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"application":"beauty4u"}</customFields>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOGSTASH"/>
        <appender-ref ref="api"/>
    </root>
</configuration>