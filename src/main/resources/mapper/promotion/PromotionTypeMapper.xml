<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.beauty4u.backend.promotion.query.mapper.PromotionTypeQueryMapper">

    <select id="findPromotionTypeList" resultType="FindPromotionTypeListDTO">
        SELECT
            promotion_type_id,
            promotion_type_name
          FROM promotion_type
        WHERE 1 = 1
        <if test="isNotEmpty(promotionTypeName)">
            and promotion_type_name LIKE CONCAT('%', trim(#{promotionTypeName}), '%')
        </if>

        <if test="sort != null and sort != ''">
            ORDER BY
            <choose>
                <when test="sort == 'id'">
                    promotion_type_id
                </when>
                <otherwise>
                    promotion_type_name
                </otherwise>
            </choose>

            <if test="order != null and order != ''">
                <choose>
                    <when test="order == 'asc'">
                        ASC
                    </when>
                    <otherwise>
                        DESC
                    </otherwise>
                </choose>
            </if>
        </if>
        LIMIT #{offset}, #{count}
    </select>

</mapper>