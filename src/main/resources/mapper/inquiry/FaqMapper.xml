<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beauty4u.backend.inquiry.query.mapper.FaqQueryMapper">

    <select id="findFaqList" resultType="FaqListDTO">
        SELECT
            faq_id,
            user_code,
            faq_title,
            faq_viewcount
        FROM faq
        WHERE 1 = 1
            <if test="faqTitle != null and faqTitle != ''">
                AND faq_title LIKE CONCAT('%', #{faqTitle}, '%')
            </if>

            <if test="publishStatus != null and publishStatus != ''">
                AND publish_status = #{publishStatus}
            </if>
        ORDER BY
            <choose>
                <when test="sort == 'view'">
                    faq_viewcount
                </when>
                <when test="sort == 'title'">
                    faq_title
                </when>
                <otherwise>
                    created_date
                </otherwise>
            </choose>

            <choose>
                <when test="order == 'asc'">
                    ASC
                </when>
                <otherwise>
                    DESC
                </otherwise>
            </choose>
        LIMIT #{offset}, #{count}
    </select>

    <select id="findFaqDetail" resultType="FaqDetailResDTO">
        SELECT
            faq_id,
            user_code,
            faq_title,
            faq_content,
            faq_viewcount,
            created_date,
            updated_date
        FROM faq
        WHERE faq_id = #{faqId}
    </select>

    <select id="findFaqListTotalCount" resultType="Long">
        SELECT
            COUNT(*)
        FROM faq
        WHERE 1 = 1
        <if test="faqTitle != null and faqTitle != ''">
            AND faq_title LIKE CONCAT('%', #{faqTitle}, '%')
        </if>
    </select>
</mapper>