<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beauty4u.backend.goods.query.mapper.GoodsQueryMapper">
    <select id="findAllGoods" resultType="com.beauty4u.backend.goods.query.dto.GoodsQueryDTO">
        SELECT
            g.goodsCode,
            g.goodsName,
            b.brandCode,
            g.goodsSkintype,
            g.goodsPrice
        FROM goods g
        JOIN brand b (g.brandCode = b.brandCode)
        ORDER BY g.goodsCreatedDate
    </select>
</mapper>